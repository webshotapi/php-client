FROM php:7.0-cli

RUN echo 'deb http://archive.debian.org/debian/ jessie main non-free contrib\ndeb-src http://archive.debian.org/debian/ jessie main non-free contrib' > /etc/apt/sources.list.d/archive.list
RUN apt update

RUN apt-get install -y  zlib1g-dev curl libcurl4-openssl-dev libgd-dev cron

RUN apt-get install -y lynx libmemcached-dev wget mc htop nano zlib1g-dev curl libcurl4-openssl-dev libgd-dev telnet libjpeg-dev cron

RUN docker-php-ext-install curl json mbstring
RUN docker-php-ext-enable curl json mbstring

RUN docker-php-ext-configure gd --with-jpeg-dir=/usr  --with-png-dir=/usr  && docker-php-ext-install -j "$(nproc)" gd
RUN docker-php-ext-enable gd

# Install Composer
RUN curl -s http://getcomposer.org/installer | php \
    && mv composer.phar /usr/local/bin/ \
    && ln -s /usr/local/bin/composer.phar /usr/local/bin/composer


##<autogenerated>##
CMD ["php", "-a"]
##</autogenerated>##